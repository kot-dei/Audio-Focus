<table>
  <thead>
    <th style="border: 1px solid #000;">name</th>
    <th style="border: 1px solid #000;">mark or comment</th>
    <th style="border: 1px solid #000;">id</th>
  </thead>
  <tbody>
    {{#each medicament}}
      <tr>
        <td style="border: 1px solid #000;">{{name}}</td>
        {{#if status}}<td style="border: 1px solid #000;background:green;">good</td>{{else}}<td style="border: 1px solid #000;background:red;">bad</td>{{/if}}
        <td style="border: 1px solid #000;">{{id}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>


